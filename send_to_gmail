import smtplib
from email.mime.multipart import MIMEMultipart
from email.mime.text import MIMEText
from email.mime.base import MIMEBase
from email import encoders
import pandas as pd
import os

fromaddr = "levon.python@gmail.com"
toaddr = "levoncdpf@gmail.com"
toaddr2 = "lidamuradyan01@gmail.com"

# instance of MIMEMultipart
msg = MIMEMultipart()

# storing the senders email address
msg['From'] = fromaddr

# storing the receivers email address
msg['To'] = toaddr
msg['To'] = toaddr2

# storing the subject
msg['Subject'] = "Scrapped Data for legal"

# string to store the body of the mail
body = "Here is the attached file for the specified position "

# attach the body with the msg instance
msg.attach(MIMEText(body, 'plain'))

# open the file to be sent
script_dir = os.path.dirname(__file__)
filename = "Data/Book1_Levon3_new_list.xlsx"
file = os.path.join(script_dir, filename)
attachment = open(file, "rb")

# instance of MIMEBase and named as p
p = MIMEBase('application', 'octet-stream')

# To change the payload into encoded formsaqsdfghjkl;'
p.set_payload(attachment.read())

# encode into base64
encoders.encode_base64(p)
p.add_header(f"Content-Disposition", f"attachment; filename={filename}")
# p.add_header('Content-Disposition', "attachment; filename= %s" % filename)

# attach the instance 'p' to instance 'msg'
msg.attach(p)

# creates SMTP session
s = smtplib.SMTP('smtp.gmail.com', 587)

# start TLS for security
s.starttls()

# Authentication
s.login(fromaddr, "lqglrrtepepxamvz")

# for specific password
# https://myaccount.google.com/security?rapt=AEjHL4PlAh6rv38PgIokqo4MNOKXlPRfjcyZlgvwF4by81rOQ8XUhwWJnn12AzOa5VS-vGqITVfOyHZQzutJNc-grjyjZtI4sQ

print("login success")
# Converts the Multipart msg into a string
text = msg.as_string()

# sending the mail
s.sendmail(fromaddr, toaddr, text)
s.sendmail(fromaddr, toaddr2, text)

# terminating the session
s.quit()

print("sent . . .")

